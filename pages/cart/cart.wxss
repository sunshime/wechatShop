/* pages/cart/cart.wxss */

.cart {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #333;
}

.top {
  height: 90rpx;
  padding: 0 20rpx;
  line-height: 90rpx;
  /* background-color: rgb(244, 244, 244); */
  font-size: 24rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
}

.top-item {
  display: flex;
  justify-content: space-between;
}

.top-cril {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  margin-top: 40rpx;
  border: 1rpx solid #b4282d;
}

.top-txt {
  padding-left: 6rpx;
}

.body {
  flex: 1;
  background: #fff;
  margin-bottom: 68rpx;
  font-size: 28rpx;
  color: #333;
}

.list-item {
  padding: 35rpx 0;
  border-bottom: 1rpx solid #f4f4f4;
  position: relative;
}

.list-item:last-child {
  border-bottom: 0 none;
}

.item-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 300ms ease;
}

.it-left {
  display: flex;
  align-items: center;
  width: 80%;
  height: 100%;
  /* padding-left: 20rpx; */
}

.tl-check {
  height: 100rpx;
  width: 125rpx;
  background: url('data:image/png;base64,') no-repeat center -670rpx;
  zoom: 0.34;
  margin: 0 35rpx;
}

.tl-imgs {
  height: 125rpx;
  width: 125rpx;
  display: block;
  background: #f4f4f4;
  /* margin-left: 20rpx; */
}

.tl-imgs image {
  width: 100%;
  height: 100%;
}

.tl-txt {
  width: 250rpx;
  padding: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tl-txt text {
  line-height: 40rpx;
  display: block;
  width: 250rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.txt-txt {
  padding-bottom: 20rpx;
}

.it-right {
  padding-right: 20rpx;
  display: flex;
}

.rt-handle {
  display: block;
  padding: 10rpx 20rpx;
  border: 1rpx solid #f4f4f4;
  text-align: center;
  margin: 0 5rpx;
}

.rt-price {
  width: 50rpx;
}

.item-bottom {
  position: absolute;
  width: 100rpx;
  top: 0;
  right: -100rpx;
  text-align: center;
  height: 100%;
  background: #b4282d;
  color: #fff;
  transition: all 200ms ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-del {
  position: absolute;
  width: 100rpx;
  top: 0;
  right: -100rpx;
  text-align: center;
  height: 100%;
  background: #b4282d;
  color: #fff;
  transition: all 200ms ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom {
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}

.bt-left {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.btl-check{
  margin-top: 100rpx;
}

.btl-check-all{
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btlc-all{
  padding-left: 10rpx;
}
.btlc-price{
  padding-right: 40rpx;
  color: #B4282D;
}

.bt-right {
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 29rpx;
  background: #b4282d;
  color: #fff;
}
